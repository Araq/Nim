<?xml version="1.0" encoding="UTF-8"?>

<!-- ODT is basically XHTML+CSS+SVG(Raw)+Data(Arbitrary) "serialized" on XML
Unstyled ODT is tiny,Styled ODT is huge (Editors use Base64 to store data) -->

<!-- This is like the Imports of ODT (xmlns:* "imports" and defines stuff) -->
<office:document
    xmlns:xhtml="http://www.w3.org/1999/xhtml"
    xmlns:text="urn:oasis:names:tc:opendocument:xmlns:text:1.0"
    xmlns:text="urn:oasis:names:tc:opendocument:xmlns:text:1.0"
    xmlns:meta="urn:oasis:names:tc:opendocument:xmlns:meta:1.0"
    xmlns:style="urn:oasis:names:tc:opendocument:xmlns:style:1.0"
    xmlns:office="urn:oasis:names:tc:opendocument:xmlns:office:1.0"
    xmlns:svg="urn:oasis:names:tc:opendocument:xmlns:svg-compatible:1.0"
  office:mimetype="application/vnd.oasis.opendocument.text"><!-- MimeType -->

  <!-- This is like the Headers of ODT (Metadata) -->
  <office:meta>
    <dc:date>$2T$3</dc:date>
    <meta:keyword>Nim</meta:keyword>
    <dc:description>Documentation</dc:description>
    <meta:generator>Generated by Nim $1, https://nim-lang.org</meta:generator>
  </office:meta>

  <!-- This is like the CSS of ODT (Match by name, use unique names) -->
  <office:styles>
    <style:style style:name="NIM_rnTransition" style:family="paragraph">
      <style:text-properties
        fo:font-size="24pt"
        fo:font-name="Monospace"
        fo:font-family="&apos;Monospace&apos;"
        fo:font-weight="bold"
        fo:margin="0.01in"
        fo:font-style="italic"
        fo:padding="0in"
        fo:border="0in"
      />
    </style:style>
  <office:styles>

  <!-- This is like the Body of ODT (All text is <p> only, can use raw SVG) -->
  <office:body>
    <office:text>
      $$1
    </office:text>
  </office:body>

</office:document>
